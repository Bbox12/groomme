<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    android:background="@color/white"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">


        <TextView
            android:id="@+id/primary_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/refer_main"
            android:fontFamily="@font/segoe_ui"
            android:gravity="center_horizontal|center"
            android:lines="2"
            android:maxEms="8"
            android:maxLines="2"
            android:minEms="8"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/_c1"
                cardCornerRadius="40dp"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="40dp"
                app:cardElevation="0dp"
                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="false">


                <com.android.volley.toolbox.NetworkImageView
                    android:id="@+id/img_profilo"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:minWidth="80dp"
                    android:minHeight="80dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/ic_launcher" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:orientation="vertical">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:textColorHint="@color/quantum_googgreen400"
                    android:theme="@style/ThemeOverlay.MaterialComponents.Dark"
                    app:boxBackgroundMode="outline"
                    app:counterEnabled="false"
                    app:hintTextAppearance="@style/MyHintText">


                    <EditText
                        android:id="@+id/otp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="2dp"
                        android:focusableInTouchMode="false"
                        android:fontFamily="@font/segoe_ui"
                        android:hint="OTP "
                        android:inputType="textNoSuggestions|number|phone"
                        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black_overlay"
                        android:textSize="18sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:textColorHint="@color/quantum_googgreen400"
                    android:theme="@style/ThemeOverlay.MaterialComponents.Dark"
                    app:boxBackgroundMode="outline"
                    app:counterEnabled="false"
                    >


                    <EditText
                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="2dp"
                        android:focusableInTouchMode="false"
                        android:fontFamily="@font/segoe_ui"
                        android:hint="Name "
                        android:inputType="textNoSuggestions|number|phone"
                        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black_overlay"
                        android:textSize="18sp" />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

        </LinearLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:textColorHint="@color/quantum_googgreen400"
            android:theme="@style/ThemeOverlay.MaterialComponents.Dark"
            app:boxBackgroundMode="outline"
            app:counterEnabled="false"
            app:hintTextAppearance="@style/MyHintText">


            <EditText
                android:id="@+id/datetime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="2dp"
                android:focusableInTouchMode="false"
                android:fontFamily="@font/segoe_ui"
                android:hint="Date and time"
                android:inputType="textNoSuggestions|number|phone"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                android:textColor="@color/black"
                android:textColorHint="@color/black_overlay"
                android:textSize="18sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:textColorHint="@color/quantum_googgreen400"
            android:theme="@style/ThemeOverlay.MaterialComponents.Dark"
            app:boxBackgroundMode="outline"
            app:counterEnabled="false"
            app:hintTextAppearance="@style/MyHintText">


            <EditText
                android:id="@+id/payable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="2dp"
                android:focusableInTouchMode="false"
                android:fontFamily="@font/segoe_ui"
                android:hint="Payable"
                android:inputType="textNoSuggestions|number|phone"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                android:textColor="@color/black"
                android:textColorHint="@color/black_overlay"
                android:textSize="18sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_weight="0.8"
                android:textColorHint="@color/quantum_googgreen400"
                android:theme="@style/ThemeOverlay.MaterialComponents.Dark"
                app:boxBackgroundMode="outline"
                app:counterEnabled="false"
                app:hintTextAppearance="@style/MyHintText">


                <EditText
                    android:id="@+id/specialist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginBottom="2dp"
                    android:drawableRight="@drawable/ic_arrow"
                    android:focusableInTouchMode="false"
                    android:fontFamily="@font/segoe_ui"
                    android:hint="Specialist"
                    android:inputType="textNoSuggestions|number|phone"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black_overlay"
                    android:textSize="18sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <androidx.cardview.widget.CardView
                cardCornerRadius="32dp"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center_vertical|end"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="32dp"
                app:cardElevation="0dp"
                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="false">


                <com.android.volley.toolbox.NetworkImageView
                    android:id="@+id/img_specialist"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/ic_launcher" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/moreRv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="3dp"
            android:layout_marginTop="15dp"
            android:background="@color/quantum_grey"
            android:padding="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:visibility="visible"/>

    </LinearLayout>





</androidx.cardview.widget.CardView>