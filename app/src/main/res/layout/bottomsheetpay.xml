<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet_pay"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/editt2"
    android:orientation="vertical"
    android:padding="10dp"
    app:layout_behavior="@string/bottom_sheet_behavior">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.08">

        <TextView
            android:id="@+id/_tiitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:fontFamily="@font/segoe_ui_bold"
            android:gravity="center_horizontal|top|center_vertical"
            android:minEms="4"
            android:padding="5dp"
            android:text="Amount to be paid"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_weight="0.1"
            android:background="@android:color/transparent"
            android:fontFamily="@font/segoe_ui_bold"
            android:gravity="center_horizontal|center_vertical"
            android:minHeight="56dp"
            android:minEms="4"
            android:padding="5dp"
            android:text="R120"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="24sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="visible">


        <View
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_margin="2dp"
            android:layout_weight="0.40"
            android:background="@color/grey_400" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/segoe_ui"
            android:gravity="center"
            android:text="Pay"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="normal" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/segoe_ui"
            android:gravity="center"
            android:text=" using "
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="normal" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_margin="2dp"
            android:layout_weight="0.40"
            android:background="@color/grey_400" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/credit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.08"
        android:minHeight="56dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:fontFamily="@font/segoe_ui_bold"
            android:gravity="center_horizontal|top|center_vertical"
            android:minEms="4"
            android:padding="5dp"
            android:text="Credit or Debit Cards"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/_wallet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_weight="0.1"
            android:background="@android:color/transparent"
            android:fontFamily="@font/segoe_ui_bold"
            android:gravity="center_horizontal|center_vertical"
            android:minHeight="56dp"
            android:minEms="4"
            android:padding="5dp"
            android:text="R120"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="24sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="visible">


        <View
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_margin="2dp"
            android:layout_weight="0.40"
            android:background="@color/grey_400" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/segoe_ui"
            android:gravity="center"
            android:text="Other Payment"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="normal" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/segoe_ui"
            android:gravity="center"
            android:text=" Modes "
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="normal" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_margin="2dp"
            android:layout_weight="0.40"
            android:background="@color/grey_400" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.08"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:fontFamily="@font/segoe_ui_bold"
            android:gravity="center_horizontal|top|center_vertical"
            android:minEms="4"
            android:padding="5dp"
            android:text="PayU"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/payuLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_weight="0.1"
            android:background="@drawable/serviceofferchild"
            android:fontFamily="@font/segoe_ui_bold"
            android:gravity="center_horizontal|center_vertical"
            android:minHeight="48dp"
            android:minEms="8"
            android:padding="5dp"
            android:text="Link"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.08"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:fontFamily="@font/segoe_ui_bold"
            android:gravity="center_horizontal|top|center_vertical"
            android:minEms="4"
            android:padding="5dp"
            android:text="Google Pay"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/googleLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_weight="0.1"
            android:background="@drawable/serviceofferchild"
            android:fontFamily="@font/segoe_ui_bold"
            android:gravity="center_horizontal|center_vertical"
            android:minHeight="48dp"
            android:minEms="8"
            android:padding="5dp"
            android:text="Link"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </RelativeLayout>

</LinearLayout>