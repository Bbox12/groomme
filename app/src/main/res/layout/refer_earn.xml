<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/refer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@android:color/transparent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_later_refer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@android:color/transparent"
            app:expanded="true">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar_later_refer"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_alignParentTop="true"
                android:background="@color/black"
                app:layout_scrollFlags="enterAlways"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:gravity="center">


                    <TextView
                        android:id="@+id/textView101"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/segoe_ui"
                        android:text="Invite "
                        android:textColor="#FFFFFF"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/textView101"
                        android:layout_toRightOf="@+id/textView101"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/segoe_ui"
                        android:text="Friends"
                        android:textColor="@color/white"
                        android:textSize="18sp" />


                </RelativeLayout>
            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/app_later_refer"
            android:background="@drawable/collapse_round_corner">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/segoe_ui"
                        android:gravity="center_horizontal"
                        android:text="Invite your friends to join Groom Me"
                        android:textSize="18sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="196dp"
                        android:layout_gravity="center_horizontal"
                        android:adjustViewBounds="true"
                        android:visibility="visible"
                        app:srcCompat="@drawable/referearn" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="@android:color/transparent"
                        android:ems="12"
                        android:focusableInTouchMode="false"
                        android:fontFamily="@font/segoe_ui"
                        android:gravity="center_horizontal"
                        android:hint="Share your referral code"
                        android:inputType="textMultiLine|textNoSuggestions" />

                    <EditText
                        android:id="@+id/referalCode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center"
                        android:layout_margin="10dp"
                        android:background="@color/white"
                        android:ems="12"
                        android:focusableInTouchMode="false"
                        android:fontFamily="@font/segoe_ui"
                        android:gravity="center_horizontal"
                        android:hint="Share your referral code"
                        android:inputType="textMultiLine|textNoSuggestions"
                        android:textAlignment="center"
                        android:textSize="30sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/segoe_ui"
                        android:text="Start inviting friends"
                        android:textSize="18sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="@color/white"
                        android:orientation="horizontal">


                        <ImageView
                            android:id="@+id/whatsapp"
                            android:layout_width="72dp"
                            android:layout_height="72dp"
                            android:layout_weight="0.25"
                            android:adjustViewBounds="true"
                            android:background="@color/white"
                            android:contentDescription="TODO"
                            android:padding="5dp"
                            android:src="@mipmap/ic_whatsapp" />

                        <ImageView
                            android:id="@+id/messenger"
                            android:layout_width="72dp"
                            android:layout_height="72dp"
                            android:layout_weight="0.25"
                            android:adjustViewBounds="true"
                            android:background="@color/white"
                            android:contentDescription="TODO"
                            android:padding="5dp"
                            android:src="@mipmap/ic_messenger" />


                        <ImageView
                            android:id="@+id/email"
                            android:layout_width="72dp"
                            android:layout_height="72dp"
                            android:layout_weight="0.25"
                            android:adjustViewBounds="true"
                            android:background="@color/white"
                            android:contentDescription="TODO"
                            android:padding="5dp"
                            android:src="@mipmap/ic_email1" />

                        <ImageView
                            android:id="@+id/message"
                            android:layout_width="wrap_content"
                            android:layout_height="72dp"
                            android:layout_weight="0.25"
                            android:adjustViewBounds="true"
                            android:background="@color/white"
                            android:contentDescription="TODO"
                            android:src="@mipmap/ic_message" />
                    </LinearLayout>


                </LinearLayout>

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/segoe_ui"
                    android:text="Share with the world"
                    android:textSize="24sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="15dp"
                    android:background="@color/white"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/twitter"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="0.33"
                        android:adjustViewBounds="false"
                        android:contentDescription="TODO"
                        android:src="@mipmap/ic_twitter" />


                    <ImageView
                        android:id="@+id/facebok"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="0.33"
                        android:adjustViewBounds="true"
                        android:contentDescription="TODO"
                        android:src="@mipmap/ic_facebook" />


                </LinearLayout>

                <Button
                    android:id="@+id/buttonRefer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_margin="10dp"
                    android:background="@color/colorPrimaryDark"
                    android:clickable="false"
                    android:fontFamily="@font/segoe_ui"
                    android:text="Invite friends"
                    android:textColor="@color/white"
                    android:textStyle="bold" />


                <ProgressBar
                    android:id="@+id/progressBarRefer"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="253dp"
                    android:layout_marginLeft="253dp"
                    android:layout_marginTop="77dp"
                    android:visibility="gone" />
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>