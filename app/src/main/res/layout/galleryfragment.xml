<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cor_home_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical|center"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:orientation="vertical">


        <ProgressBar
            android:id="@+id/progressBar21"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />

        <TextView
            android:id="@+id/no_rides"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:fontFamily="@font/segoe_ui"
            android:gravity="center"
            android:text="No Image added"
            android:textSize="18sp"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/servicelinarlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:addStatesFromChildren="false"
            android:alwaysDrawnWithCache="false"
            android:background="@color/white"
            android:fillViewport="false"
            android:fitsSystemWindows="false"
            android:orientation="vertical"
            android:padding="2dp"
            android:scrollbars="none"
            android:visibility="gone">


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/serviceRv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_gravity="top"
                android:background="@android:color/transparent"
                android:visibility="visible" />


        </LinearLayout>

        <Button
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/editt2"
            android:fontFamily="@font/segoe_ui"
            android:minWidth="200dp"
            android:padding="10dp"
            android:text="Make your own gallery"
            android:textColor="@color/white" />


    </RelativeLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>